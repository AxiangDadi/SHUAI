                <div class="clearfix"> </div>
            </div>

        </div>
    </div>
    <ul class="socials">
        <li><a class="soc1" href="#"></a></li>
        <li><a class="soc2" href="#"></a></li>
        <li><a class="soc3" href="#"></a></li>
    </ul>
    <!--/start-copyright-->
    <div class="copy">
        <div class="container">
            <p>&copy; 2015 Nuevo Shop. All Rights Reserved | Design by <a href="http://w3layouts.com/">W3layouts</a> </p>
        </div>
    </div>
    <!--//end-copyright-->
    <!--end-footer-->
    <!--//end-content-->

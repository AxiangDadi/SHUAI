
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>UpdatePro</title>
    <link href="~/ProducrCss/UpdatePro.css" rel="stylesheet" />
    <script src="~/Scripts/jquery-1.10.2.js"></script>
    <script type="text/javascript">
        $(function () {
            var TypeID = $("#TypeID").val();

            $("#tid").val(TypeID);
           
        })


    </script>
</head>
<body>
    <div class="main">
        <h2>修改商品</h2>
        <div class="manage">
           @using (Html.BeginForm("UpdateGoods", "Frontdesk", FormMethod.Post, new { enctype = "multipart/form-data" }))
           {
            <form action="manage-result.html">
           @foreach (Model.Goods list in ViewData.Model)
           {
                <table class="form">
                    <tr>
                        <td class="field">商品名称：</td>
                        <td><input type="text" name="GoodsID" hidden="hidden" value="@list.GoodsID"/>
                        <input type="text" class="text" name="GoodsName" value="@list.GoodsName" /></td>
                    </tr>
                    <tr>
                        <td class="field">商品类别：</td>
                        <td>
                            <input type="text" value="@list.TypeID" hidden="hidden" id="TypeID" />
                            <select name="TypeID" id="tid">
                                <option>请选择商品类型</option>
                                @foreach (dynamic item in ViewBag.Xlk1)
                                {
                                    <option  value="@item.TypeID">@item.TypeName</option>
                                }
                            </select>

                        </td>
                    </tr>
                   

                    <tr>
                        <td class="field">商品图片：</td>
                        <td><input type="text" hidden="hidden" name="GoodsPic" value="@list.GoodsPic"/>
                        <input type="file" class="text" name="files" id="GoodsPic"  multiple/></td>
                    </tr>
                    <tr>
                        <td class="field">商品价格：</td>
                        <td><input type="text" class="text tiny" name="GoodsPrice" value="@list.GoodsPrice" /> 元</td>
                    </tr>
                    
                    <tr>
                        <td class="field">描述：</td>
                        <td>
                            <textarea cols="50" rows="10" name="GoodsNote">@list.GoodsNote</textarea>
                        </td>
                    </tr>
                    <tr>
                        <td></td>
                        <td><label class="ui-blue"><input type="submit" name="submit" value="修 改" id="xg" /></label></td>
                    </tr>
                </table>
           }
            </form>
           }
        </div>
    </div>
</body>
</html>
